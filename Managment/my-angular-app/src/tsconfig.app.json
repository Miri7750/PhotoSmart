{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./out-tsc/app",
      "types": [],
      "target": "es2015",
      "module": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": [
        "es2018",
        "dom"
      ]
    },
    "files": [
      "src/main.ts",
      "src/polyfills.ts"
    ],
    "include": [
      "src/**/*.d.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/test.ts",
      "src/**/*.spec.ts"
    ]
  }
  